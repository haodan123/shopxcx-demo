.zuixia {
  padding-bottom: 100px;
}
.left {
  width: 23%;
}
.step_slot {
  width: 100%;
  background: rgba(239, 239, 239, 0.5);
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin: 5px;
}
.step_slot .stepp-name {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 15px;
  font-size: 15px;
  font-weight: 600;
}
.step_slot .stepp-name .step-time {
  color: #1ab888;
  font-size: 12px;
}
.step_slot .line {
  width: 90%;
  height: 1px;
  background: #aabcb8;
  margin-top: 5px;
}
.step_slot .step-text {
  margin-top: 5px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
}
.step_slot .img-step {
  width: 90%;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.step_slot .img-step image {
  width: 250px;
  height: 200px;
  border-radius: 8px;
}
.view-top {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  padding: 0 10px;
  margin-top: 15px;
}
.view-top .view-name {
  padding: 8px 13px;
  font-size: 15px;
  font-weight: 400;
  background: #1ab888;
  color: #FFF;
  border-radius: 8px;
}
.view-top .view-xuxian {
  flex: 1;
  border: 1px dashed #1ab888;
}
.view-top .view-xiala {
  width: 15px;
  height: 15px;
  padding: 5px;
  background: #1ab888;
  border-radius: 50%;
  border: 5px solid #d2ebe5;
}
.content {
  width: 93%;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: space-between;
}
.content .spjg {
  display: flex;
  flex-flow: column;
  height: 100rpx;
  justify-content: space-around;
  font-size: 12px;
}
.content .ytb {
  width: 100rpx;
  height: 100rpx;
  line-height: 93rpx;
  border: 3px solid #1ab888;
  color: #1ab888;
  border-radius: 50rpx;
  text-align: center;
}
.cgq {
  background-color: #f4f4f4;
  padding: 5px;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  flex-direction: row;
  width: 95%;
  justify-content: space-between;
  font-size: 14px;
}
.cgq-item {
  background-color: #fff;
  padding: 10px;
  width: 41%;
  display: flex;
  flex-direction: column;
  border-radius: 10px;
  overflow: hidden;
  gap: 5px;
}
.title {
  color: #000;
