:export {
  theme: #007aff;
}
.pageview {
  font-family: "UniDreamLED";
}
.pageview .cpxx-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-content: space-around;
  align-items: center;
  margin: 10px 0 5px;
}
.pageview .cpxx-view .cpxx-item {
  min-height: 127px;
  width: 100px;
  padding: 10px;
  background: rgba(239, 239, 239, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
}
.pageview .cpxx-view .cpxx-item image {
  width: 40rpx;
  height: 40rpx;
  padding: 10px;
  background: #dbf4ec;
  border-radius: 50%;
}
.pageview .cpxx-view .cpxx-item .text1 {
  font-size: 12px;
  color: #919191;
  margin-top: 5px;
}
.pageview .cpxx-view .cpxx-item .text2 {
  margin-top: 5px;
  font-size: 12px;
  color: #000000;
  font-weight: 600;
}
.pageview .loation-view {
  width: 100%;
  background: rgba(239, 239, 239, 0.5);
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10px;
}
.pageview .loation-view image {
  width: 40rpx;
  height: 40rpx;
  padding: 10px;
  background: #dbf4ec;
  border-radius: 50%;
}
.pageview .loation-view .loation-text {
  width: auto;
  padding: 5px;
  text-align: center;
  color: white;
  font-size: 13px;
  background: #1ab888;
  border-radius: 4px;
  margin-left: 10px;
}
.pageview .loation-view .loation-adress {
  flex: 1;
  margin: 0 10px 0 10px;
  padding-right: 5px;
  font-size: 13px;
  color: #000000;
  font-weight: 600;
}
.scqy-view {
  width: 100%;
  background: rgba(239, 239, 239, 0.5);
  border-radius: 8px;
}
.scqy-view .scqy-inview {
  margin: 10px;
  padding: 5px 0;
}
.view-top {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 15px 0;
  padding: 0 10px;
}
.view-top .view-name {
  padding: 8px 13px;
  font-size: 15px;
  font-weight: 400;
  background: #1ab888;
  color: #FFF;
  border-radius: 8px;
}
.view-top .view-xuxian {
  flex: 1;
  border: 1px dashed #1ab888;
}
.view-top .view-xiala {
  width: 15px;
  height: 15px;
  padding: 5px;
  background: #1ab888;
  border-radius: 50%;
  border: 5px solid #d2ebe5;
}
uni-rich-text image {
  max-width: 100% !important;
}