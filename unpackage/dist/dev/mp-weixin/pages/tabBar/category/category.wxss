:export {
  theme: #007aff;
}
.search {
  background-color: #fff;
  padding: 10px;
}
.shopping {
  min-height: 100vh;
}
.layout {
  display: flex;
  height: 100%;
  min-height: calc(100vh - 50px);
}
.layout .layout-left {
  width: 120px;
  min-height: calc(100vh - 50px);
  position: relative;
  background-color: #faf6fc;
  border-right: 1px solid #ccc;
}
.layout .layout-right {
  min-height: calc(100vh - 50px);
  background-color: #fff;
  flex: 1;
  padding: 10px;
}
.aside-item {
  position: relative;
  padding: 15px 10px;
  text-align: center;
  color: #000;
  background-color: #faf6fc;
}
.active {
  color: #50AA38;
  width: 102px;
  position: relative;
  background-color: #fff;
}
.active::before {
  content: "";
  height: 30px;
  width: 5px;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  background-color: #50AA38;
}
.shop-item {
  display: flex;
  border-radius: 8px;
  gap: 5px;
}
.shop-item image {
  width: 80px;
  height: 80px;
  border-radius: 10px;
}
.shop-item .shop-box {
  flex: 1;
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 5px;
  border-bottom: 1px solid #ccc;
}
.shop-item .title {
  color: #000;
}
.shop-item .text {
  color: #ccc;
}
.shop-item .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop-item .info .price {
  color: red;
}
.shop-item .btn {
  padding: 5px 0px;
  color: #fff;
}
.shoptypeBox {
  position: relative;
  border-bottom: 1px solid #ccc;
  padding-top: 10px;
}
.shoptypeBox .typeAll {
  width: 30px;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 13px;
  border-left: 1px solid #ccc;
}
.shoptypeBox .typeAll .mt {
  margin-top: 10px;
}
.shoptype {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 33px 0 10px;
  gap: 10px;
  white-space: nowrap;
}
.shoptype .typeItem {
  display: flex;
  flex-direction: column;
  gap: 5px;
  align-items: center;
  justify-content: center;
}
.shoptype .typeItem .typeItemimg {
  width: 30px;
  height: 30px;
}
.shoptype .typeItem .typeItemimg .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.shoptype .typeItem .typeItemBtm {
  color: #000;
  font-size: 12px;
}
.shoptype .typeItem .topActive {
  color: #fff;
  border-radius: 8px;
  padding: 0 3px;
  background-color: #50AA38;
}
.popupBox {
  height: 100vh;
  position: fixed;
  top: 54px;
  left: 0;
  right: 0;
}
.popupBox .popupContent {
  background-color: #fff;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  display: flex;
  flex-direction: column;
}
.popupBox .popupContent .allName {
  padding-left: 20px;
}
.popupBox .popupContent .contentInfo {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10px;
}
.popupBox .popupContent .contentInfo .contentItem {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 10px;
}
.popupBox .popupContent .contentInfo .contentItem .image {
  border-radius: 50%;
  width: 50px;
  height: 50px;
}
.popupBox .popupContent .contentInfo .contentItem .image image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.popupBox .popupContent .contentInfo .contentItem .text {
  margin-top: 5px;
  text-align: center;
  font-size: 12px;
}
.popupBox .popupContent .contentClose {
  border-top: 1px solid #ccc;
  text-align: center;
  padding: 7px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popupBox .mask {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.popupBox .masknone {
  height: 0%;
  background-color: rgba(0, 0, 0, 0);
}