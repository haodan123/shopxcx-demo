.details {
  min-height: 100vh;
  padding-bottom: 110rpx;
}
.slideshow {
  height: 600rpx;
  background-color: #fff;
}
.content-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
}
.content-top .tLeft {
  color: #000;
}
.content-top .tLeft .ml {
  margin-left: 10px;
}
.content-top .tLeft .xq {
  margin: 10px 0 0 0;
  color: #000;
  font-weight: 700;
}
.content-top .tRight {
  width: 100px;
  height: 50px;
}
.content-mid {
  color: #ccc;
  margin: 10px 0;
}
