}
.title-box {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-box .title-left {
  font-size: 16px;
  color: #000;
}
.lookSy {
  display: flex;
  justify-content: space-between;
}
