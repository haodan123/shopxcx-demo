:export {
  theme: #007aff;
}
.section {
  background-color: #fff;
  border-radius: 20px;
  width: 90%;
  margin: 20px auto;
  overflow: hidden;
  padding: 0 15px;
}
.row {
  display: flex;
  align-items: center;
  position: relative;
  height: 55px;
  background: #fff;
  border-bottom: 1px solid #ccc;
}
.row:last-child {
  border: none;
}
.row .tit {
  flex-shrink: 0;
  width: 130rpx;
  font-size: 30rpx;
  color: #51AA38;
}
.row .input {
  flex: 1;
  font-size: 30rpx;
  color: #000;
}
.row .icon-shouhuodizhi {
  font-size: 36rpx;
  color: #000;
}
.default-row {
  margin-top: 16rpx;
}
.default-row .tit {
  flex: 1;
}
.default-row switch {
  transform: translateX(16rpx) scale(0.9);
}
.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 80rpx;
  margin: 60rpx auto;
  font-size: 14px;
  color: #fff;
  background-color: #51AA38;
  border-radius: 10rpx;
}