.addressPage {
  padding: 10px;
}
.addressBox {
  padding: 10px;
  background-color: #fff;
  border-radius: 10px;
}
.addressItem {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
  border-bottom: 1px solid #ccc;
  align-items: center;
  gap: 10px;
}
.addInfo .info-top {
  display: flex;
  gap: 20px;
  margin-bottom: 10px;
}
.addInfo .tag {
  width: 54px;
  text-align: center;
  font-size: 24rpx;
  color: red;
  /* margin-right: 10upx; */
  margin-right: 10px;
  background: #fffafb;
  border: 1px solid red;
  border-radius: 4rpx;
  padding: 4rpx 10rpx;
  line-height: 1;
}
.edit {
  width: 40px;
}
.add-btn {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 16rpx;
  z-index: 95;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #51AA38;
  border-radius: 10rpx;
  box-shadow: 1px 2px 5px rgba(219, 63, 96, 0.4);
}