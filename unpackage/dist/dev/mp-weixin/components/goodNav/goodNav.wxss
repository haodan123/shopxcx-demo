:export {
  theme: #007aff;
}
.group {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  border-top: 0.5px solid #ccc;
  align-items: center;
}
.group-left {
  width: 40%;
  display: flex;
  justify-content: center;
}
.gl-item {
  display: flex;
  flex-wrap: wrap;
  width: 40%;
  justify-content: center;
}
.gl-item > image {
  width: 50rpx;
  height: 50rpx;
}
.gli-title {
  width: 100%;
  font-size: 12px;
  text-align: center;
}
.group-right {
  width: 60%;
  display: flex;
  justify-content: space-around;
}
.group-right > view {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  /* border-radius: 40rpx; */
  font-size: 28rpx;
  color: #FFFFFF;
  border-radius: 20px;
  text-align: center;
}
.group-right .red {
  background: #ff0000;
}
.group-right .green {
  /* background: #ffa200; */
  background-color: #51AA38;
}